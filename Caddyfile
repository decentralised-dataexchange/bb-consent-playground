http://localhost:80 {
	reverse_proxy api:80
	header / {
		Strict-Transport-Security "max-age=31536000;"
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		Referrer-Policy "no-referrer-when-downgrade"
	}

	# Conditionally add headers based on a specific path
	@conditionallyAddHeadersForPath path_regexp ^/v2/onboard/admin/login
	header @conditionallyAddHeadersForPath {
		X-Joke "Special-Path-Value"
	}

	# Log all requests to stdout for Docker logs
	log {
		output stdout
	}
}
